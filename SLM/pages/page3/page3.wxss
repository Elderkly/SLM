.view_1{
  height: 200rpx;
  width: 90%;
  align-items: center;
  position: relative;
  border-radius: 5px;
  margin: 10rpx 5%;
  background: #fff;
  display: flex;
  box-sizing: border-box;
  padding: 0 25rpx;
}
.view_1 image{
  width: 150rpx;
  height: 150rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
}
.view_1>view{
  flex: 1;
  display: flex;
  flex-direction: column;
}
.text_1 {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.view_1>view>view{
  display: flex;
}
.text_2 {
  flex: 1;
  font-size: 28rpx;
}
.text_3 {
  font-size: 28rpx;
}