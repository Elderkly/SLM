/* pages/admin/settingMenu/settingMenu.wxss */
.menu-box{
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
  padding: 50rpx 15rpx;
  box-sizing: border-box;
}
.menu-item{
  border-radius: 5rpx;
  margin-bottom: 15rpx;
  display: flex;
  justify-content: center;
  width: 95%;
  align-items: center;
}
.menu-item image{
  width: 250rpx;
  height: 250rpx;
  margin-right: 15rpx;
  background-color: #eee;
  border-radius: 12rpx;
}
.menu-details{
  flex: 1;
  display: flex;
  flex-direction: column;
}
.menu-details view{
  margin-bottom: 15rpx;
  font-size: 28rpx;
  display: flex
}
.menu-details view input{
  flex:1;
  border-bottom: 1rpx solid #eee;
}
.weui-cells_after-title{
  margin-right: 15rpx;
}
.btn-box{
  display: flex;
  margin-top: 80rpx;
  align-items: center;
}
.btn-box view{
  width: 250rpx;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  text-align: center;
  line-height: 80rpx;
}
.btn-box view:first-child{
  color: #fff;
  background-color: #4ba6f0;
  margin-right: 80rpx;
}
.btn-box view:last-child{
  color: #fff;
  background-color: #ce5b57;
}


.new view{
  background: #4ba6f0!important;
  width: 500rpx!important;
  margin: 0!important;
}