/* pages/admin/settingMenu/settingMenu.wxss */
.menu-box{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 200rpx;
}
.menu-item{
  background: #fff;
  border-radius: 5rpx;
  margin-bottom: 15rpx;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  width: 95%;
  height: 250rpx;
  align-items: center;
}
.menu-item image{
  width: 165rpx;
  height: 165rpx;
  margin-right: 15rpx;
}
.menu-details{
  flex: 1;
  display: flex;
  flex-direction: column;
}
.menu-details view{
  margin-bottom: 15rpx;
  font-size: 30rpx;
}
.menu-details view:first-child{
  font-weight: bold;
}
.addBtn{
  width: 90%;
  position: fixed;
  bottom: 50rpx;
  left: 5%;
  background: #5186f1;
  height: 100rpx;
  border-radius: 50rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 40rpx;
  color: #fff;
}