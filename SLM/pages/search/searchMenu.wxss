.body{  
 background-color: #ffff;
   /* padding:20px 15px 0 15px; */
   /* background-color: #ffffff; */
}

.body .body_1{
  height: 100rpx;
  border: 1px solid #000;
  border-radius: 15rpx;
  margin:25rpx;
  line-height: 100rpx;
  padding-left: 10px;
}


.menu-item{
  background: #fff;
  border-radius: 5rpx;
  margin-bottom: 15rpx;
  padding: 15rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  width: 100%;
  height: 200rpx;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  padding-left: 5%;
}
.menu-item image{
  width: 150rpx;
  height: 150rpx;
  margin-right: 15rpx;
  border-radius: 8rpx;
}
.menu-details{
  flex: 1;
  display: flex;
  flex-direction: column;
}
.menu-details view{
  margin-bottom: 5rpx;
  font-size: 32rpx;
}
.body>view:last-child{
  border:none
}

.home_header{
  height: 100rpx;
  background: linear-gradient(#4ba6f0, #59bdff,#82cdff);
  position: relative;
  overflow: hidden;
}
.home_header image{
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  top: 25rpx;
  left: 100rpx;
}
.home_header input{
  width: 80%;
  height: 70rpx;
  border-radius: 35rpx;
  background: #fff;
  margin: auto;
  font-size: 28rpx;
  font-weight: 300;
  margin-top: 10rpx;
  padding-left: 80rpx;
  box-sizing: border-box;
}