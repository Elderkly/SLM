.search{
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #4ba6f0;
  height: 120rpx;

}
.search_1{
  display: flex;
  height: 80rpx;
  width: 650rpx;
  /* border: 1px solid #000; */
  background-color: #ffff;
  border-radius: 25rpx;
}

.search image{
  width: 45rpx;
  height: 45rpx;
  margin:8px 10px;
}

.search input{
   font-size: 34rpx;
   height: 80rpx;
   line-height: 80rpx;
