/* pages/me/me.wxss */
.name{
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 35rpx 0 35rpx 40rpx;
}
.touxiang {
  overflow: hidden;
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx;
  border-radius: 15rpx;
  background-color: #eee;
}
.noLogin{
  display: flex;
  justify-content: center;
  align-items: center;
}
.noLogin image{
  width: 100rpx;
  height: 100rpx;
}
.name text{
  margin:10rpx;  
  text-align: center;
  font-size: 40rpx;
  
  
}
.userName{
  color: #000;
  font-size: 42rpx;
  margin-left: 20rpx;
  font-weight: bold;
}
.middle>view{
  background-color: #fff;
  height: 130rpx;
  border-radius: 8rpx;
  line-height: 100rpx;
  flex: 1;
}
.middle>view{
  display: flex;      
   align-items: center;/*侧轴居中 */
   
   
}

.middle{
  margin-top: 30rpx;
}
.middle > view:last-child .btn{
  border: none;
}

.btn{
  border-bottom: 1rpx solid #eee;
  flex:1;
  margin-left: 15rpx;
}
.middle>view image:first-child{
  width: 50rpx;
  height: 50rpx;
  margin-left: 35rpx;
}
.middle text{
  font-size: 32rpx;
}
.login{
  width: 660rpx!important;
  height: 70rpx!important;
  background: none!important;
  border-radius: 8rpx!important;
  text-align: left!important;
  line-height: 78rpx!important;
  font-size: 42rpx!important;
  font-weight: 500!important;
  margin: 0 0 0 10rpx!important;
  padding: 0!important;
  color: #000;
}
.jiantou{
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  right: 40rpx;
  transform: rotate(-90deg);
}