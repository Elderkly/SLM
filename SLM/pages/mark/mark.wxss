/* pages/mark/mark.wxss */
@import "../forum/forumItem/forumItem.wxss";

.menuBox{
    padding: 35rpx;
    background: #fff;
}
.menuHeader{
    font-size: 32rpx;
}
.menuDetails{
    margin-top: 30rpx;
    display: flex;
}
.menuDetails image{
    margin-right: 40rpx;
    height: 280rpx;
    width: 260rpx;
    border-radius: 12rpx;
}
.menuDetails > view{
    font-size: 26rpx;
    color: #4a4a4a;
    padding-top: 50rpx;
}
.menuData view{
    margin-bottom: 30rpx;
}
.menuData text{
    color: #000;
    font-weight: bold;
}
.score{

}
.score .scoreText{
    font-size: 50rpx;
    text-align: center;
    font-weight: bold;
    color: #4ba6f0;
    margin-top: 20rpx;
}
.xingxing{
    text-align: center;
    margin-top: 10rpx;
}
.xingxing image{
    width: 50rpx;
    height: 50rpx;
}
.scoreBox{
    display: flex;
    margin-top: 30rpx;
}
.scoreBox>view{
    flex: 1;
    text-align: center;
    position: relative;
}
.scoreHeader{
    font-size: 32rpx;
    text-align: left;
}
.myScore{
    color: #000!important;
    font-weight: 400!important;
}
.people{
    color: #b5b5b5;
    font-size: 24rpx;
}
.submit{
    padding: 10rpx 30rpx;
    background: #4ba6f0;
    color: #fff;
    font-size: 24rpx;
    border-radius: 12rpx;
    position: absolute;
    right: 0;
    top: 0;
}